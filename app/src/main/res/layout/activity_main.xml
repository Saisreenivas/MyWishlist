<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:padding="45dp"
    android:layout_height="match_parent"
    tools:context="com.saisreenivas.androidmediaplayer.mywishlist.MainActivity"
    android:background="#efd023">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="My WishList"
        android:id="@+id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:hint="Enter Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="#ffffff"
        android:textSize="20sp"
        android:id="@+id/title_wish" />

    <EditText
        android:hint="Enter your wish"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
        android:layout_below="@+id/title_wish"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        android:textSize="20sp"
        android:id="@+id/body_wish" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_wish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/button_submit"
        android:text="Submit"
        android:background="#5cb3ff" />
</RelativeLayout>
